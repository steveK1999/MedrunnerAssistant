{
  "type": "module",
  "name": "medrunnerassistant",
  "version": "0.3.0",
  "description": "MedrunnerAssistant customizes the Medrunners Experience on duty",
  "main": "electron-main.cjs",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@medrunner/api-client": "^0.6.1",
    "dotenv": "^17.2.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build:all": "electron-builder --win --x64 --ia32",
    "legacy": "node main.js",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.generalmine.medrunnerassistant",
    "productName": "Medrunner Assistant",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon-256.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "GeneralMine",
      "verifyUpdateCodeSignature": false,
      "sign": null,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Medrunner Assistant",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "MedrunnerAssistant-Portable.exe"
    },
    "files": [
      "electron-main.cjs",
      "preload.cjs",
      "main.js",
      "ui/**/*",
      "lib/**/*",
      "features/**/*",
      "sounds/**/*",
      "assets/**/*",
      "package.json",
      ".env.example"
    ],
    "asarUnpack": [
      "main.js",
      "lib/**/*",
      "features/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "sounds",
        "to": "sounds",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeneralMine/MedrunnerAssistant.git"
  },
  "keywords": [
    "Medrunner"
  ],
  "author": "GeneralMine, Luebbi3000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GeneralMine/MedrunnerAssistant/issues"
  },
  "homepage": "https://github.com/GeneralMine/MedrunnerAssistant#readme"
}
